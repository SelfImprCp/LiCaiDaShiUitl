<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

android:background="@color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_bg_white"
         android:orientation="vertical">

        <TextView
            android:id="@+id/base_config_dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="标题:"
            android:textColor="@color/black_color_30"
            android:textSize="@dimen/text_size_18" />


        <TextView
            android:id="@+id/base_config_dialog_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="内容提示内容提示内容提示内容提示内容提示内容提示内容提示内容提示内容提示内 "
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_16"
            android:visibility="visible" />

        <EditText
            android:id="@+id/edit_config_dialog_txt"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_bg_color_bottom"
            android:gravity="center"
            android:textColor="@color/black_color_30"
            android:textCursorDrawable="@null"
            android:textSize="16sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/base_config_nickname_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"

            android:text="昵称不得超过10个字"
            android:textColor="@color/base_color"
            android:textSize="12sp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/space_15"
            android:background="@color/gray_cp_util"></View>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/base_config_dialog_cannel_btn_b"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_666666" />

            <View

                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray_cp_util"
                android:gravity="center"></View>


            <TextView
                android:id="@+id/base_config_dialog_sure_btn_b"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"

                android:text="确定"
                android:textColor="@color/base_color" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>