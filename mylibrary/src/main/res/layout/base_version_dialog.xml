<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_popup_p"
    android:layout_width="312dp"
    android:layout_height="500dp"
    android:layout_gravity="center"

    android:background="@color/transparent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="312dp"
        android:layout_height="433dp"
        android:background="@drawable/update_dialog">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/base_version_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="标题:"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_18" />


            <TextView
                android:id="@+id/base_version_dialog_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:text="内容提示内容提示内容提示内容提示内容提示内容提示内容提示内容提示内容提示内 "
                android:textColor="#999999"
                android:textSize="@dimen/text_size_15"
                android:visibility="visible" />


        </LinearLayout>

        <Button
            android:id="@+id/base_version_dialog_sure_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/space_25"
            android:background="@drawable/dialog_query_bg"
            android:paddingLeft="@dimen/space_50"
            android:paddingRight="@dimen/space_50"
            android:text="立即更新"
            android:textColor="@color/white_cp_util"

            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/base_version_dialog_cannel_btn"

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_15"
        android:src="@drawable/tankuang_cha" />

</LinearLayout>